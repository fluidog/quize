## Makefile for the Linux kernel module.

# Define the variables of "TARGET„ÄÅFILE" according to your needs.
#
# example:
# 	TARGET := hello-example
# 	FILES := test1.c test2.c test3.c
#
#   obj-m += $(TARGET).o
#	$(TARGET)-m := $(FILES:%.c=%.o)
#
####################################################

TARGET ?= hello-example
FILES ?= main.c

ifdef KERNELRELEASE

obj-m += $(TARGET).o
$(TARGET)-m := $(FILES:%.c=%.o)

# $(warning obj-m="$(obj-m)" $(TARGET)-m="$($(TARGET)-m)" )

else

KERNELDIR ?= /lib/modules/$(shell uname -r)/build
INSTALLDIR ?= /lib/modules/$(shell uname -r)/updates

build:
	make -C $(KERNELDIR) M=$(shell pwd) modules
clean:
	make -C $(KERNELDIR) M=$(shell pwd) clean

install:
	install -d $(DESTDIR)$(INSTALLDIR)
	install -m 644 $(TARGET).ko $(DESTDIR)$(INSTALLDIR)

test:
	insmod $(TARGET).ko
	rmmod $(TARGET)

endif